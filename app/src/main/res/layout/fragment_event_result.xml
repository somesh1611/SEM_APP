<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Tournaments.EventResultFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/tName_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:textColor="#9966cc"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/sport_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tName_text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:textColor="#9966cc"
            android:textSize="24sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/round_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/sport_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:textColor="#9966cc"
            android:textSize="24sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/match_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textColor="?attr/textColor"
            android:textSize="22sp"
            android:textStyle="bold">

        </TextView>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/sport_text"
            android:layout_marginTop="24dp"
            android:background="?android:attr/listDivider">

        </View>

        <TextView
            android:id="@+id/score1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_text"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="--"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="40sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/score2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:text="--"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="40sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/team1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score1_text"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text=""
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="22sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/team1_1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team1_text"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="22sp"
            android:textStyle="bold">
        </TextView>


        <TextView
            android:id="@+id/team2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score2_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:text=""
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="22sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/team2_1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team2_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="22sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/set1.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team1_1_text"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="?attr/textColor"
            android:textStyle="bold">

        </TextView>


        <TextView
            android:id="@+id/set1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set1.1"
            android:layout_marginStart="32dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="?attr/textColor"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/set1.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set1.2"
            android:layout_marginStart="32dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="?attr/textColor"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/set1.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set1.3"
            android:layout_marginStart="32dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="?attr/textColor"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/set1.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set1.4"
            android:layout_marginStart="32dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="?attr/textColor"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/set2.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team1_1_text"
            android:layout_alignBaseline="@id/set1.1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="?attr/textColor"
            android:textStyle="bold">

        </TextView>


        <TextView
            android:id="@+id/set2.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set2.1"
            android:layout_alignBaseline="@id/set1.2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="?attr/textColor"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/set2.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set2.2"
            android:layout_alignBaseline="@id/set1.3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="?attr/textColor"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/set2.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set2.3"
            android:layout_alignBaseline="@id/set1.4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="?attr/textColor"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/set2.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set2.4"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/set1.5"
            android:layout_marginEnd="32dp"
            android:textColor="?attr/textColor"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/tie_breaker_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/set1.5"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/add_score"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/ic_baseline_add_24"
        android:backgroundTint="@color/fab_color"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:layout_marginBottom="16dp">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/add_bye_result"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/ic_baseline_done_24"
        android:backgroundTint="@color/fab_color"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:layout_marginBottom="16dp">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</FrameLayout>