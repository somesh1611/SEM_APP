<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Tournaments.TournamentEventsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout android:orientation="vertical" tools:context=".ui.main.MainFragment" android:layout_height="match_parent" android:layout_width="match_parent">

        <TextView
            android:id="@+id/events_list_textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
